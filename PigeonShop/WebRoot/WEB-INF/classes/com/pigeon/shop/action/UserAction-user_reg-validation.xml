  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd"		
>

<validators>
	<!--  校验用户名 -->
	<field name="account">
		<field-validator type="requiredstring">
			<message>用户名啊喂...</message>
		</field-validator>
	</field>
	
	<!--  校验密码 -->
	<field name="password">
		<field-validator type="requiredstring">
			<message>密码啊喂...</message>
		</field-validator>
	</field>
	
</validators>